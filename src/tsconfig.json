{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "isolatedModules": false,
        "jsx": "react",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noLib": false,
        "preserveConstEnums": true,
        "removeComments": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "**/*.ts"
    ],
    "compileOnSave": true,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
